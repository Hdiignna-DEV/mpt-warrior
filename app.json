{
  "expo": {
    "name": "MPT Trading HUB",
    "slug": "mpt-warrior",
    "version": "1.0.1",
    "runtimeVersion": "1.0.1",
    "orientation": "portrait",
    "icon": "./public/mpt-logo.png",
    "userInterfaceStyle": "dark",
    "entryPoint": "./App.js",
    "projectId": "mpt-warrior",
    "splash": {
      "image": "./public/mpt-logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f172a"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "plugins": [
      [
        "expo-router",
        {
          "origin": false
        }
      ]
    ],
    "ios": {
      "supportsTabletMode": true,
      "bundleIdentifier": "com.mptcommandcenter.app",
      "buildNumber": "2",
      "splash": {
        "image": "./public/mpt-logo.png",
        "resizeMode": "contain",
        "backgroundColor": "#0f172a"
      },
      "usesNonExemptEncryption": false,
      "infoPlist": {
        "NSBonjourServices": [
          "_http._tcp"
        ],
        "NSLocalNetworkUsageDescription": "This app uses local network to sync trading data",
        "NSBonjourServiceTypes": [
          "_http._tcp",
          "_ws._tcp"
        ]
      }
    },
    "android": {
      "package": "com.mptcommandcenter.app",
      "versionCode": 2,
      "icon": "./public/mpt-logo.png",
      "splash": {
        "image": "./public/mpt-logo.png",
        "resizeMode": "contain",
        "backgroundColor": "#0f172a"
      },
      "adaptive": true,
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.VIBRATE"
      ]
    },
    "web": {
      "favicon": "./public/mpt-logo.png"
    },
    "description": "MPT Trading HUB - Platform Trading Profesional untuk Warrior Indonesia. Dashboard lengkap, trading journal, AI mentor, risk calculator, leaderboard real-time, dan achievement system untuk mengembangkan skill trading Anda.",
    "plugins": [
      [
        "expo-notifications",
        {
          "icons": [
            "./public/mpt-logo.png"
          ]
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "b3070fe0-6424-4629-a023-4223b888f200"
      }
    },
    "owner": "mpt_community"
  }
}
